    </div>

    @if (User.Identity.IsAuthenticated)
    {
        
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="sidebar">
                        <ul class="widget widget-menu unstyled">
                            <li class="active">
                                <a href="~/Student/ViewExperiences"><i class="menu-icon icon-user"></i>Records </a>
                            </li>
                            <li>
                                <a href="~/Student/ViewMessages">
                                    <i class="menu-icon icon-inbox"></i>Messages 
                                    @if (ViewBag.Unread != 0)
                                    {
                                        <b class="label green pull-right" id="unread">
                                            @ViewBag.Unread
                                        </b>
                                    }
                                </a>
                            </li>
                        </ul>
                        <!--/.widget-nav-->
                    </div>
                    <!--/.sidebar-->
                </div>
                <!--/.span3-->
                <div class="span9">
                    <div class="content">
                        @RenderBody()
                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <hr />
    <footer>
        <p style="margin-left:50px;"> NUCES Lahore &copy; @DateTime.Now.Year</p>
    </footer>
    }
    else
    {
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="margin-left:50px;"> NUCES Lahore &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    }

    <script src="~/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
 
    <script src="~/scripts/flot/jquery.flot.js" type="text/javascript"></script>
    <script src="~/scripts/flot/jquery.flot.resize.js" type="text/javascript"></script>
    <script src="~/scripts/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/scripts/common.js" type="text/javascript"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
