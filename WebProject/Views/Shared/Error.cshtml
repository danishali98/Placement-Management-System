
@if (ViewBag.ErrorTitle == null)
{
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request. Please contact admin.</h2>
}
else
{
    <h1 class="text-danger" style="color:red;">@ViewBag.ErrorTitle</h1>
    <h2 class="text-danger">@ViewBag.ErrorMessage</h2>
}