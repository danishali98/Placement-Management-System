@using WebProject.Models
@model LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Placements Management System - Login</title>
    <link type="text/css" href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/Content/theme.css" rel="stylesheet">
    <link type="text/css" href="~/images/icons/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600'
          rel='stylesheet'>
    <style>
        .back {
            background-image: url('../../bootstrap/img/background.jpg');
            background-size: cover;
            height: 100%;
            background-position: center;
        }

        .panel-transparent {
            background: none;
            border: none;
        }
    </style>
</head>
<body class="back">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand" href="~/Placements/Authenticate">Placements</a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    @*<form class="navbar-search pull-left input-append" action="#">
                        <input type="text" class="span3">
                        <button class="btn" type="button">
                            <i class="icon-search"></i>
                        </button>
                    </form>*@
                    @Html.Partial("_LoginPartial")
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="wrapper panel-transparent">
            <div class="container">
                <div class="row">
                    <div class="module module-login span4 offset4">
                        <form class="form-vertical">
                            <div class="module-head">
                                <h3>Sign In</h3>
                            </div>
                            <div class="module-body">
                                <div class="control-group">
                                    <div class="controls row-fluid">
                                        <input class="span12" data-val="true" data-val-required="The UserName field is required." id="UserName" name="UserName" type="text" value="" placeholder="UserName" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls row-fluid">
                                        <input class="span12" data-val="true" data-val-required="The Password field is required." id="Password" name="Password" type="password" placeholder="Password" />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="module-foot">
                                <div class="control-group">
                                    <div class="controls clearfix">

                                        <input type="submit" class="btn btn-primary pull-right" value="Login">

                                        <label class="checkbox">
                                            <input data-val="true" data-val-required="The Remember me? field is required." id="RememberMe" name="RememberMe" type="checkbox" value="true" /><input name="RememberMe" type="hidden" value="false" />
                                            <label for="RememberMe">Remember me?</label>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </form>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
