@model WebProject.Models.Message

@{
    ViewBag.Title = "EditMessage";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="module">
        <div class="module-head">
            <h3>Edit Student Message</h3>
        </div>
        <div class="module-body">
            <table class="table table-striped">

                <tbody>
                    <tr>
                        <td>
                            Roll Number
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.rollNum)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Text
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.text)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Time
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.time)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Status
                        </td>
                        <td>
                            @Html.DropDownList("Status", (SelectList)ViewBag.Status)
                        </td>
                    </tr>

                    
                </tbody>
            </table>

            <div class="controls">
                <a href="~/Admin/EditMessage">
                    <input type="submit" name="submit" class="btn btn-primary btn-md" value="Update">
                </a>
            </div>
            <br />
            <!-- <hr /> -->
            <br />
        </div>
    </div>

